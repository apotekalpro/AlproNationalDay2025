    <script>
        // Add some interactivity
        document.addEventListener('DOMContentLoaded', function() {
            // Animate progress bar
            const progressBar = document.getElementById('target-progress');
            if (progressBar) {
                setTimeout(() => {
                    progressBar.style.width = '75%';
                    progressBar.style.transition = 'width 2s ease-in-out';
                }, 1000);
            }
            
            // Add hover effects to interactive cards
            const cards = document.querySelectorAll('.interactive-card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                    this.style.transition = 'all 0.3s ease';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
            
            // Countdown timer animation (you can customize this)
            const countdownElements = document.querySelectorAll('.countdown-timer');
            countdownElements.forEach(element => {
                setInterval(() => {
                    element.style.background = element.style.background === 'conic-gradient(from 0deg, #dc2626, #ffffff, #dc2626)' 
                        ? 'conic-gradient(from 180deg, #dc2626, #ffffff, #dc2626)' 
                        : 'conic-gradient(from 0deg, #dc2626, #ffffff, #dc2626)';
                }, 2000);
            });
        });
    </script>
</body>
